{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "ESNext",
    "allowJs": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "lib": ["es2023", "DOM", "DOM.Iterable"],
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "rootDir": "./src",
    "sourceMap": true,
    "target": "ES2023"
  },
  "display": "React Library",
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx"],
  "extends": "./base.json",
  "include": ["src/**/*"]
}
