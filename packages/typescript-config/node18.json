{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "node16",
    "allowJs": true,
    "checkJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2023"],
    "moduleResolution": "node16",
    "outDir": "dist",
    "sourceMap": true,
    "target": "es2022"
  },
  "display": "Node 18 Config",
  "exclude": ["node_modules", "dist"],
  "extends": "./base.json",
  "include": ["src/**/*"]
}
